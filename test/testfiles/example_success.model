hybrid reachability
{
 state var g,x,c

 setting
 {
  fixed steps 0.1
  time 20
  remainder estimation 1e-5
  identity precondition
  gnuplot octagon g,x,c
  fixed orders 5
  cutoff 1e-15
  precision 128
  output example
  max jumps 5
  print on
 }

 modes
 {
  l1
  {
   poly ode 1
   {
    g' = 1
    x' = 0
    c'= 1
   }

      inv
      {
       g in [0.0,20.0]
      }
  }

  l2
  {
   poly ode 1
   {
    g' = 0
    x' = 1
    c' = 1
   }
  }

    l3
    {
     poly ode 1
     {
      g' = 0
      x' = 1
      c' = 0
     }
    }
}

 jumps
 {

   l1 -> l2
   reset { g' := 0 }
   parallelotope aggregation {}

    l1 -> l3
        guard { c = 2.0 }
        reset { c' := 0}
     parallelotope aggregation {}

 }

 init
 {
  l1
  {
   g in [0,0]
   x in [0,0]
   c in [0,0]
  }
 }
}


