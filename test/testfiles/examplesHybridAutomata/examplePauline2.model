hybrid reachability
{
 state var x,g1,g2, c

 setting
 {
  fixed steps 0.1
  time 10
  remainder estimation 1e-5
  identity precondition
  gnuplot octagon x,g1,g2, c
  fixed orders 5
  cutoff 1e-15
  precision 128
  output example
  max jumps 5
  print on
 }

 modes
 {
  l1
  {
   poly ode 1
   {
    x' = 0
    g1' = 1
    g2' = 1
    c' = 1
   }

      inv
      {
      c <= 3
      }
  }


  l2
  {
   poly ode 1
   {
    x' = 0
    g1' = 0
    g2' = 1
    c' = 1
    }

      inv
      {
      c <= 3
      }

  }


   l3
   {
    poly ode 1
    {
    x' = 1
    g1' = 1
    g2' = 1
    c' = 0
    }
  }

 l4
 {
  poly ode 1
  {
   x' = 0
   g1' = 1
   g2' = 1
   c' = 1
  }

    inv
    {
    c <= 3
    }

 }

  l5
   {
    poly ode 1
    {
     x' = 0
     g1' = 0
     g2' = 0
     c' = 1
    }

       inv
       {
       c <= 3
       }
   }


   l6
   {
    poly ode 1
    {
     x' = 0
     g1' = 0
     g2' = 1
     c' = 0
     }

   }


    l7
    {
     poly ode 1
     {
     x' = 0
     g1' = 1
     g2' = 0
     c' = 0
     }
   }

  l8
  {
   poly ode 1
   {
    x' = 0
    g1' = 0
    g2' = 0
    c' = 0
   }

  }

}

 jumps
 {
    l1 -> l2
    reset { g1' := 0}
    parallelotope aggregation {}

    l1 -> l3
    guard { c = 3.0 }
    reset { c' := 0}
    parallelotope aggregation {}

    l1 -> l4
    reset { g2' := 0}
    parallelotope aggregation {}

    l2 -> l5
    reset { g2' := 0 }
    parallelotope aggregation {}

    l2 -> l6
    guard { c = 3.0 }
    reset { c' := 0}
    parallelotope aggregation {}

    l3 -> l6
    guard { c = 3.0 }
    reset { c' := 0}
    parallelotope aggregation {}

    l3 -> l7
    reset { g2' := 0 }
    parallelotope aggregation {}

    l4 -> l5
    reset { g1' := 0}
    parallelotope aggregation {}

    l4 -> l7
    guard { c = 3.0 }
    reset { c' := 0}
    parallelotope aggregation {}

    l5 -> l8
    guard { c = 3.0 }
    reset { c' := 0}
    parallelotope aggregation {}

    l6 -> l8
    reset { g2' := 0 }
    parallelotope aggregation {}

    l7 -> l8
    reset { g1' := 0}
    parallelotope aggregation {}
 }

 init
 {
  l1
  {
   x in [5,5]
   g1 in [0,0]
   g2 in [0,0]
   c in [0,0]
  }
 }
}