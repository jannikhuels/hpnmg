hybrid reachability
{
 state var x,g1,g2

 setting
 {
  fixed steps 0.01
  time 10
  remainder estimation 1e-5
  identity precondition
  gnuplot octagon x,g1,g2
  fixed orders 5
  cutoff 1e-15
  precision 128
  output example
  max jumps 5
  print on
 }

 modes
 {
  l1
  {
   poly ode 1
   {
    x' = 1
    g1' = 1
    g2' = 1
   }
  }


  l2
  {
   poly ode 1
   {
    x' = 0
    g1' = 1
    g2' = 0
    }

  }


   l3
   {
    poly ode 1
    {
    x' = 0
    g1' = 0
    g2' = 1
    }
  }

 l4
 {
  poly ode 1
  {
   x' = 0
   g1' = 0
   g2' = 0
  }

 }

}

 jumps
 {
  l1 -> l2
  reset { g2' := 0}
  parallelotope aggregation {}

  l1 -> l3
  reset { g1' := 0 }
  parallelotope aggregation {}

  l2 -> l4
    reset { g1' := 0}
  parallelotope aggregation {}

  l3 -> l4
  reset { g2' := 0 }
    parallelotope aggregation {}
 }

 init
 {
  l1
  {
   x in [0,0]
   g1 in [0,0]
   g2 in [0,0]
  }
 }
}



